<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="156.0" prefWidth="284.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <VBox prefHeight="240.0" prefWidth="986.0" BorderPane.alignment="CENTER">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Role name" />
                  <TextField prefHeight="17.0" prefWidth="144.0" />
               </children>
            </HBox>
            <RadioButton mnemonicParsing="false" text="Can Kick Users">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="can Lock Channel">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="can Assign Moderator">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="can Assign Admin">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </RadioButton>
            <RadioButton mnemonicParsing="false" text="can Create a New Role">
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
            </RadioButton>
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Create a Role" BorderPane.alignment="CENTER" />
   </top>
   <bottom>
      <HBox prefHeight="70.0" prefWidth="284.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onClickBack" prefHeight="26.0" prefWidth="125.0" text="Back">
               <HBox.margin>
                  <Insets left="5.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#onClickCreateRole" prefHeight="26.0" prefWidth="171.0" text="Create Role">
               <HBox.margin>
                  <Insets left="100.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
   <right>
      <ListView prefHeight="144.0" prefWidth="74.0" BorderPane.alignment="CENTER" />
   </right>
</BorderPane>
